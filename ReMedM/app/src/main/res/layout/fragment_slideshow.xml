<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_principal">

    <TextView
        android:id="@+id/medicamentos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/LC"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="8dp"
        android:text="Mis medicamentos actuales:"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@id/medicamentos"
        app:layout_constraintStart_toStartOf="@id/medicamentos"
        app:layout_constraintTop_toTopOf="@id/medicamentos"/>
    <ImageView
        android:layout_width="320dp"
        android:layout_height="200dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bg_blanco_redondo"
        app:layout_constraintEnd_toEndOf="@id/medicamentos"
        app:layout_constraintStart_toStartOf="@id/medicamentos"
        app:layout_constraintTop_toTopOf="@id/medicamentos"/>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/medi"
        app:layout_constraintEnd_toEndOf="@id/medicamentos"
        app:layout_constraintHorizontal_bias="0.110"
        app:layout_constraintStart_toStartOf="@id/medicamentos"
        app:layout_constraintTop_toTopOf="@id/medicamentos"/>

    <EditText
        android:id="@+id/Mimedi"
        android:layout_width="250dp"
        android:layout_height="190dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="8dp"
        android:text="@string/medicamento"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@id/medicamentos"
        app:layout_constraintHorizontal_bias="0.699"
        app:layout_constraintStart_toStartOf="@id/medicamentos"
        app:layout_constraintTop_toTopOf="@id/medicamentos"/>
    <Button
        android:id="@+id/BtnProgrM"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="330dp"
        android:layout_marginEnd="8dp"
        android:text="Recuerdame tomar mi medicamento"
        android:textColor="@color/cardview_light_background"
        android:background="@drawable/bg_verde_redondo"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@id/medicamentos"
        app:layout_constraintStart_toStartOf="@id/medicamentos"
        app:layout_constraintTop_toTopOf="@id/medicamentos"/>
</androidx.constraintlayout.widget.ConstraintLayout>